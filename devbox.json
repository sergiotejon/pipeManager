{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.1/.schema/devbox.schema.json",
  "packages": [
    "helm-docs@1.14.2",
    "kubernetes-helm@3.16.1",
    "kubectl@1.30.0",
    "k3d@5.7.3"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null",
      "alias ls='ls --color=auto'",
      "k3d registry create registry -p 5111 2> /dev/null || true",
      "k3d cluster create --registry-use k3d-registry:5111 -a 3 2> /dev/null || true",
      "make get-kubeconfig",
      "source set-kubeconfig.sh"
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  }
}
